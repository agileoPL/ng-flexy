{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ng-flexy/freezer": ["dist/freezer"],
      "@ng-flexy/freezer/*": ["dist/freezer/*"],
      "skins": ["dist/skins"],
      "skins/*": ["dist/skins/*"],
      "logger": ["dist/logger"],
      "logger/*": ["dist/logger/*"],
      "storage": ["dist/storage"],
      "storage/*": ["dist/storage/*"],
      "core": ["dist/core"],
      "core/*": ["dist/core/*"],
      "toasts": ["dist/toasts"],
      "toasts/*": ["dist/toasts/*"],
      "layout": ["dist/layout"],
      "layout/*": ["dist/layout/*"],
      "form": ["dist/form"],
      "form/*": ["dist/form/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
