{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ng-flexy/freezer": ["dist/freezer"],
      "@ng-flexy/freezer/*": ["dist/freezer/*"],
      "@ng-flexy/skins": ["dist/skins"],
      "@ng-flexy/skins/*": ["dist/skins/*"],
      "@ng-flexy/logger": ["dist/logger"],
      "@ng-flexy/logger/*": ["dist/logger/*"],
      "@ng-flexy/storage": ["dist/storage"],
      "@ng-flexy/storage/*": ["dist/storage/*"],
      "@ng-flexy/core": ["dist/core"],
      "@ng-flexy/core/*": ["dist/core/*"],
      "@ng-flexy/toasts": ["dist/toasts"],
      "@ng-flexy/toasts/*": ["dist/toasts/*"],
      "@ng-flexy/layout": ["dist/layout"],
      "@ng-flexy/layout/*": ["dist/layout/*"],
      "@ng-flexy/form": ["dist/form"],
      "@ng-flexy/form/*": ["dist/form/*"],
      "@ng-flexy/form-bootstrap": ["dist/form-bootstrap"],
      "@ng-flexy/form-bootstrap/*": ["dist/form-bootstrap/*"],
      "@ng-flexy/json-impexp": ["dist/json-impexp"],
      "@ng-flexy/json-impexp/*": ["dist/json-impexp/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
